html, body
    font-family "PingFang SC", "微软雅黑", "Microsoft Yahei", Helvetica, 'Helvetica Neue', Tahoma,Arial,sans-serif
    -webkit-font-smoothing antialiased
    min-height 100%
    min-width 100%
    height 100%

table.table tbody td
    font-size: 16px

user-select(val)
    -webkit-user-select: val
    -moz-user-select: val
    -ms-user-select: val
    user-select: val

.shadow
    -webkit-box-shadow: 0 2px 4px -1px rgba(0,0,0,.2), 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12)
    box-shadow: 0 2px 4px -1px rgba(0,0,0,.2), 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12)

.application
    font-family: inherit!important

.hidden
    display: none!important

.center-item
    display: block!important
    margin: 0 auto!important

.f27
    font-size 27px

.no-decoration
    color: inherit!important
    text-decoration: none!important

.margin
    margin 0!important

.page-title
    padding: 5px
    color: black
    font-size: 25px
    margin-top: 50px
    margin-bottom: 20px

.ql-editor p
    font-size: 18px

.language-select
    padding: 5px

.language-show
    margin-left: 56px

/*    Login/Regist    */

.fullscreen
    max-height: 100%

.foreienBg
    background-position center!important
    background-image url(https://i.imgur.com/lt58IlN.jpg)!important
    background-size cover!important
    max-height: 100%!important
    overflow: hidden!important
    z-index: 99;

.foreienBg::before
    content: ''
    display: block
    position: absolute
    background-color: #000
    opacity: 0.3
    width: 100%
    height: 100%

.identifyCard
    padding 10px
    background-color rgba(0,0,0,.8)!important
    width 450px
    z-index: 99
    margin-bottom 10px
    border-radius 5px
    transition: .5s
    user-select(none)

.cards-wrapper.selected {
    display: block

    .identifyCard {
        margin-top: -95%
    }

    .select-card {
        display: none
        width: 100%
        height: 50px!important
    }

    .active {
        display: block
    }

    .select-card-text {
        padding-top: 5px;
    }
} 

.select-card
    width: 50%
    height: 150px!important
    display: inline-block
    color: white!important
    cursor pointer
    transition: .5s

.select-card-text
    font-size: 26px;
    padding-top: 55px;
    text-align: center!important

.selected-card
    height: 35px;

.student
    background-color #5e9861!important
  
.student:hover, .student.active
    background-color: #4CAF50!important

.company
    background-color: #9a4d67!important
  
.company:hover, .company.active {
    background-color: #e91e63!important
}

.transCard
    padding 20px 20px 40px 20px
    background-color rgba(0,0,0,.8)!important
    width 350px
    border-radius 5px
    opacity: 0
    position: absolute
    margin-left: 50px
    transition: .5s

.transCard.show
    opacity: 1

@media only screen and (max-width: 600px) {
    .transCard, .identifyCard {
        width: 320px
    }

    .transCard {        
        margin-left: 0
    }
}

@media only screen and (max-height: 800px) {
    .cards-wrapper {
        display: inherit
    }

    .transCard .avatar img {
        height: 120px
    }

    .cards-wrapper.selected .transCard {
        position: inherit
    }

    .cards-wrapper.selected .identifyCard {
        display: none
    }
}

.wide-btn
    width: 100%

