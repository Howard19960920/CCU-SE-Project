html, body
    font-family "PingFang SC", "微软雅黑", "Microsoft Yahei", Helvetica, 'Helvetica Neue', Tahoma,Arial,sans-serif
    -webkit-font-smoothing antialiased

html, body
    min-height 100%
    min-width 100%
    height 100%

.application {
    font-family: inherit!important;
}

.hidden
    display: none!important

.center-item
    display: block!important
    margin: 0 auto!important

.f27
    font-size 27px

.no-decoration
    text-decoration: none

.margin
    margin 0!important

.sideCard
    padding 20px
    color #FFF
    background-color rgba(0,0,0,.8)
    width 550px
    margin auto

.identifyCard
    padding 10px
    background-color rgba(0,0,0,.8)!important
    width 450px
    margin-bottom 10px
    border-radius 5px
    margin-top: 40%
    margin-left: auto
    margin-right: auto
    transition: .5s

@media only screen and (max-width: 600px) {
    .identifyCard {
        width 350px
    }
}

.identifyCard.selected {
    margin-top: 10%

    .select-card {
        display: none
        width: 100%
        height: 50px!important
    }

    .active {
        display: block
    }

    .select-card-text {
        padding-top: 5px;
    }
} 

.select-card
    width: 50%
    height: 150px!important
    display: inline-block
    color: white!important
    cursor pointer
    transition: .5s

.select-card-text
    font-size: 26px;
    padding-top: 55px;
    text-align: center!important

.selected-card
    height: 35px;

.student
    background-color #5e9861!important
  
.student:hover, .student.active
    background-color: #4CAF50!important

.company
    background-color: #9a4d67!important
  
.company:hover, .company.active {
    background-color: #e91e63!important
}

.transCard
    padding 20px 20px 40px 20px
    background-color rgba(0,0,0,.8)!important
    width 350px
    border-radius 5px
    margin-left: auto
    margin-right: auto
    opacity: 0
    transition: .5s

.transCard.show
    opacity: 1

.hoverHand
  cursor pointer

.foreienBg
  background-position center!important
  background-image url(https://i.imgur.com/lt58IlN.jpg)!important
  background-size cover!important
  max-height: 100%!important
  overflow: hidden!important

.foreienBg::before
    content: ''
    display: block
    position: absolute
    background-color: #000
    opacity: 0.3
    width: 100%
    height: 100%

.wide-btn
    width: 100%

.disable
  background-color: #DFDFDF!important
  -webkit-box-shadow: none
  box-shadow: none
  color: #9F9F9F!important

.page-enter-active, .page-leave-active {
  transition: all .4s;
}

.page-enter {
  opacity: 0;
  transform: translateX(-10%);
}

.page-leave-to {
  opacity: 0;
  transform: translateX(10%);
}

.page-enter-active, .page-leave-active {
  transition: all .4s;
}

.page-enter {
  opacity: 0;
  transform: translateX(-10%);
}

