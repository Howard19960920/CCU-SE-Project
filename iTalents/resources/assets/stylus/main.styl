/*    Animation    */

.page-enter-active, .page-leave-active {
    transition: all .4s;
}

.page-enter {
  opacity: 0;
  transform: translateX(-10%);
}

.page-leave-to {
  opacity: 0;
  transform: translateX(10%);
}

.page-enter-active, .page-leave-active {
  transition: all .4s;
}

.page-enter {
  opacity: 0;
  transform: translateX(-10%);
}

