html, body
    font-family "PingFang SC", "微软雅黑", "Microsoft Yahei", Helvetica, 'Helvetica Neue', Tahoma,Arial,sans-serif
    -webkit-font-smoothing antialiased

html, body, #table-page, #center-page
    min-height 100%
    min-width 100%
    height 100%

.application {
    font-family: inherit!important;
}

