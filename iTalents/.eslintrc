{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
	"jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "extends": "standard",
  "plugins": [
    "html"
  ],
  "rules": {
    "arrow-parens": 0,
    "space-before-function-paren": 0,
    "no-new": 0,
	"indent": ["error", 4]
  }
}
